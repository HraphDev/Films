{% extends 'pages/Home.html.twig' %}

{% block title %}About - {{ site_name|default('MVS') }}{% endblock %}

{% block main %}
    {# About Hero Section #}
    <section id="video-cards" class="video-cards section">
        <div class="container">
            <div class="row justify-content-center gy-4">
                {% for video in videos|default([
                    '../assets/videos/cartoon.mp4',
                    '../assets/videos/film.mp4',
                    '../assets/videos/serie.mp4'
                ]) %}
                    <div class="col-lg-4 col-md-6">
                        <div class="video-card">
                            <video class="w-100 h-100" autoplay muted loop playsinline>
                                <source src="{{ asset(video) }}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    {# Stats Section #}
    <section id="stats" class="stats section light-background">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4">
                {% for stat in stats|default([
                    {'icon': 'bi-emoji-smile', 'count': 232, 'label': 'Happy Clients'},
                    {'icon': 'bi-journal-richtext', 'count': 521, 'label': 'Projects'},
                    {'icon': 'bi-headset', 'count': 1463, 'label': 'Hours Of Support'},
                    {'icon': 'bi-people', 'count': 15, 'label': 'Team Members'}
                ]) %}
                    <div class="col-lg-3 col-md-6">
                        <div class="stats-item d-flex align-items-center w-100 h-100">
                            <i class="bi {{ stat.icon }} color-blue flex-shrink-0"></i>
                            <div>
                                <span data-purecounter-start="0" 
                                      data-purecounter-end="{{ stat.count }}" 
                                      data-purecounter-duration="1" 
                                      class="purecounter"></span>
                                <p>{{ stat.label }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}